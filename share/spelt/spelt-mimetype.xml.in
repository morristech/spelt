<mime-info xmlns='http://www.freedesktop.org/standards/shared-mime-info'>

  <mime-type type="application/x-spelt-language-database">
    <sub-class-of type="application/xml"/>
    <_comment>Spelt XML Language Database</_comment>
    <_acronym>XLDB</_acronym>
    <glob pattern="*.xldb"/>
    <magic priority="50">
      <match value="&lt;language_database lang=" type="string" offset="0:256"/>
    </magic>
  </mime-type>

</mime-info>
