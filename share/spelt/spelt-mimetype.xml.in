<?xml version="1.0"?>
<!--
This file contains all formats supported by Spelt.

See: http://standards.freedesktop.org/shared-mime-info-spec/shared-mime-info-spec-latest.html
-->
<mime-info xmlns='http://www.freedesktop.org/standards/shared-mime-info'>

  <mime-type type="text/x-language-database">
	<sub-class-of type="text/xml"/>
	<_comment>XML Language Database</_comment>
    <_acronym>XLDB</_acronym>
    <_expanded-acronym>XML Language Database</_expanded-acronym>
    <glob pattern="*.xldb"/>
	<magic priority="80">
	  <magic value="&lt;language_database lang=" type="string" offset="0:0"/>
    </magic>
  </mime-type>

  <mime-type type="application/x-language-database">
	<sub-class-of type="application/xml"/>
	<_comment>XML Language Database</_comment>
    <_acronym>XLDB</_acronym>
    <_expanded-acronym>XML Language Database</_expanded-acronym>
    <glob pattern="*.xldb"/>
	<magic priority="80">
	  <magic value="&lt;language_database lang=" type="string" offset="0:0"/>
    </magic>
  </mime-type>

</mime-info>
